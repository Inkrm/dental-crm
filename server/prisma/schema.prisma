// schema prisma pentru modele si relatii
// documentatie: https://pris.ly/d/prisma-schema

// optimizare interogari cu prisma accelerate
// https://pris.ly/cli/accelerate-init
generator client {
  // clientul generat pentru prisma
  provider = "prisma-client-js"
}
datasource db {
  // configurarea conexiunii la baza de date
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// rolurile utilizatorilor din sistem
enum Role {
  ADMIN
  DOCTOR
  RECEPTION
}

// statusurile posibile ale programarilor
enum AppointmentStatus {
  PLANNED
  CONFIRMED
  CANCELLED
  DONE
}

// utilizatorii aplicatiei
model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  role         Role     @default(RECEPTION)
  fullName     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  doctorAppointments Appointment[] @relation("DoctorAppointments")
  refreshTokens      RefreshToken[]
}

// tokenurile de refresh pentru sesiuni
model RefreshToken {
  id        String   @id @default(cuid())
  tokenHash String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  revokedAt DateTime?
  createdAt DateTime @default(now())
  expiresAt DateTime
}

// pacientii gestionati de aplicatie
model Patient {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  phone     String?
  email     String?
  dob       DateTime?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  appointments Appointment[]
}

// programarile pacientilor cu doctorii
model Appointment {
  id        String            @id @default(cuid())
  patientId String
  doctorId  String
  startTime DateTime
  endTime   DateTime
  status    AppointmentStatus @default(PLANNED)
  reason    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  patient Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)
  doctor  User    @relation("DoctorAppointments", fields: [doctorId], references: [id], onDelete: Restrict)

  @@index([doctorId, startTime, endTime])
  @@index([patientId, startTime])
}
